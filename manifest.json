{
  "name": "Niconico Now Tweet",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "We can tweet an image of playing now video.",
  "icons": {
  },
  "web_accessible_resources": [
    "chrome_ex_oauth.html"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": [
      "chrome_ex_oauthsimple.js",
      "chrome_ex_oauth.js",
      "keys.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Niconico Now Tweet"
  },
  "permissions": [
    "<all_urls>"
  ]
}
